<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background"
	tools:context=".GameActivity"
	>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:layout_centerInParent="true"
		>

		<View
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			/>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="80dp"
			android:background="@color/panel"
			>
			<Spinner
				android:id="@+id/level"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:spinnerMode="dropdown"
				android:backgroundTint="@color/frame"
				tools:ignore="UnusedAttribute"
				/>
		</RelativeLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			/>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="40dp"
			android:paddingBottom="20dp"
			android:background="@color/panel"
			android:clipChildren="false"
			>
			<RelativeLayout
				android:id="@+id/playingField"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:background="@color/frame"
				android:paddingStart="4dp"
				android:paddingEnd="4dp"
				android:paddingBottom="4dp"
				android:clipChildren="false"
				>
				<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@color/panel"
					android:paddingStart="4dp"
					android:paddingEnd="4dp"
					android:paddingBottom="4dp"
					android:clipChildren="false"
					>
					<ImageView
						android:layout_width="252dp"
						android:layout_height="252dp"
						android:src="@drawable/box_bg"
						android:tint="@color/space"
						/>
					<include layout="@layout/box" />
				</RelativeLayout>
			</RelativeLayout>
		</RelativeLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			/>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="80dp"
			android:orientation="vertical"
			android:background="@color/panel"
			android:onClick="click"
			>
			<TextView
				android:id="@+id/message"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textColor="@color/frame"
				android:fontFamily="@font/gearhead"
				android:gravity="center_horizontal"
				android:layout_centerInParent="true"
				android:visibility="invisible"
				/>
			<ProgressBar
				android:id="@+id/busy"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_centerInParent="true"
				android:visibility="invisible"
				/>
		</RelativeLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/levelUpNotification"
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:visibility="gone"
		>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/title.level"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textSize="80dp"
			android:textColor="@color/frame"
			android:fontFamily="@font/gearheadscan"
			android:layout_gravity="center_horizontal"
			tools:ignore="SpUsage"
			/>
		<TextView
			android:id="@+id/levelUpValue"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textSize="120dp"
			android:textColor="@color/frame"
			android:fontFamily="@font/gearheadscan"
			android:layout_gravity="center_horizontal"
			tools:ignore="SpUsage"
			/>
	</LinearLayout>
</RelativeLayout>